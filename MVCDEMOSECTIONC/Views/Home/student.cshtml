
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.6.0.js"></script>
    <script src="~/Scripts/umd/popper.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <style>
        .jumbotron {
            background-color: azure;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-sm bg-success navbar-dark">
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link" href="/home/Index">Home</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/home/ContactUs">Contact US</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/home/AboutUs">About Us</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/home/student">Student</a>
            </li>
        </ul>

    </nav>
    @{ 

        string result;
        if (ViewBag.Grade >= 2.0)
        {
            result = "Pass";
        } else
        {
            result = "Fail";
        }
    }
    <div class="container-fluid">
        <div class="jumbotron">
            <h2>Student Result</h2>
            <table class="table">
                <tr>
                    <td>ID</td>
                    <td>@ViewBag.Id</td>
                </tr>
                <tr>
                    <td>Name</td>
                    <td>@ViewBag.Name</td>
                </tr>
                <tr>
                    <td>Grade</td>
                    <td>@ViewBag.Grade</td>
                </tr>
                <tr>
                    <td>Result</td>
                    <td>@result</td>
                </tr>
                <tr>
                    <td>Message</td>
                    @if (result == "Pass")
                    {
                          <td class="text-success">Congratulation</td>
                   } else
                   {
                <td class="text-danger">Try Next Time</td>
            }
                </tr>
                <tr>
                    <td>Semesters</td>
                    @for(int i = 0; i<= ViewBag.Semester; i++)
            {
                <td>@i</td>
            }
                </tr>
                <tr>
                    <td>Names</td>
                    @foreach(var item in ViewBag.Student)
            {
                 <td>@item</td>
            }
                </tr>
            </table>
        </div>

    </div>
</body>
</html>
